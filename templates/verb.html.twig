{# templates/verb.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Verbs{% endblock %}

{% block extra_header %}

{% endblock %}

{% block body %}

<div class="row">
  <div class="main">
  {% if wordQuestioned is defined %}
    <h2>Question</h2>
    <div id='origin'> <b>{{langQueryName|capitalize}}:</b> {{wordQuestioned}}</div>
    <div id='reverse' style='visibility: hidden;'><b> {{langNotQueryName|capitalize}}:</b> {{wordAnswered}}</div>

    <script type="text/javascript">
      function show()
      {
        var elem = document.getElementById('reverse');
        elem.style.visibility = 'visible';

        elem= document.getElementById('show_answer');
        elem.style.visibility = 'hidden';
      }
    </script>

    <button id="show_answer" class="show" onclick="show()">Show Answer</button>

    <button class="correct_button" onclick="window.location.href='{{linkOk}}/{{id}}'">Correct</button>
    <button class="wrong_button" onclick="window.location.href='{{linkKo}}/{{id}}'">Wrong</button>
    {% else %}
    <div id='origin'>
      Sorry, there are no results in the database that match your query.
      Try to change the category selected.
      </div>
    {% endif %}
  </div>

  <div class="side">
    <h2>Options</h2>
    <h5>Sorting options</h5>
      <button class="button" 
      {%if mode == "worst"%} 
        id="selected" 
      {% endif %} 
      onclick="window.location.href='/verb/setSort/worst'">Sort by Worst</button>

      <button class="button" 
      {%if mode == "random"%} 
        id="selected" 
      {% endif %} 
      onclick="window.location.href='/verb/setSort/random'">Sort by Random</button>

      <button class="button" 
      {%if mode == "unknown"%} 
        id="selected" 
      {% endif %} 
      onclick="window.location.href='/verb/setSort/unknown'">Sort by Unknown</button>
    
    <h5>Language Asked</h5>
      <button class="button" 
        {%if langSelected == "both"%}  
          id="selected" 
        {% endif %} 
        onclick="window.location.href='/setLang/both'">Ask Both</button>

        <button class="button" 
        {%if langSelected == "langA"%} 
          id="selected" 
        {% endif %} 
        onclick="window.location.href='/setLang/langA'">Ask {{langAName|capitalize}}</button>

        <button class="button" 
        {%if langSelected == "langB"%} 
          id="selected" 
        {% endif %} 
        onclick="window.location.href='/setLang/langB'">Ask {{langBName|capitalize}}</button>    
  </div>
</div>

{% endblock %}